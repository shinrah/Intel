pipeline {
    agent any

    parameters { 
        choice(
            choices: ['Deploy', 'stop', 'start', 'restart'], 
            description: 'choose mode for depoloyment and managing the app', 
            name: 'mode'
        )
        string(
            defaultValue: 'UAT',
            name: 'Banch_Name_for_UI',
            description: ''
        )
        string(
            defaultValue: 'central-data',
            name: 'Branch_Name_For_JAVA',
            description: ''
        )
        choice(
            choices: ['UAT', 'DEV', 'IT'], 
            description: 'Choose Environemt', 
            name: 'Host'
        )
        choice(
            choices: ['UAT', 'uatexternal', 'staging'], 
            description: 'Choose Environement for build', 
            name: 'Denv'
        )
    }

    stages {
        stage('print env and mode') {
            steps {
                script {
                    env.Host = sh(returnStdout: true, script: "echo ${params.Host}").trim()
                    env.Mode = sh(returnStdout: true, script: "echo ${params.mode}").trim()
                    env.Deployment_Method = sh(returnStdout: true, script: "echo ${params.Deployment_Method}").trim().split().collect { it as String }
                }
            }
        }
    }
}
